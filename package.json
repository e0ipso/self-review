{
  "name": "@e0ipso/self-review",
  "productName": "Self Review",
  "version": "1.2.0",
  "description": "GitHub-style PR review UI for local git diffs",
  "main": ".webpack/main",
  "scripts": {
    "start": "electron-forge start",
    "clean": "rm -rf .webpack out",
    "package": "npm run clean && electron-forge package",
    "make": "npm run clean && electron-forge make",
    "publish": "electron-forge publish",
    "lint": "eslint .",
    "test": "npm run test:unit && npm run test:e2e",
    "test:unit": "vitest run --config vitest.config.main.ts && vitest run --config vitest.config.renderer.ts",
    "test:e2e": "npm run package && npx bddgen && xvfb-run --auto-servernum npx playwright test --project e2e",
    "test:e2e:headed": "npm run package && npx bddgen && npx playwright test --project e2e",
    "record:demo": "npm run package && npx playwright test --project recording",
    "test:unit:main": "vitest --config vitest.config.main.ts",
    "test:unit:renderer": "vitest --config vitest.config.renderer.ts",
    "test:coverage": "vitest run --config vitest.config.main.ts --coverage && vitest run --config vitest.config.renderer.ts --coverage",
    "prepare": "husky"
  },
  "keywords": [
    "code-review",
    "git",
    "diff",
    "electron",
    "ai",
    "developer-tools"
  ],
  "author": {
    "name": "Mateu Aguil√≥ Bosch",
    "email": "mateu@mateuaguilo.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/e0ipso/self-review.git"
  },
  "homepage": "https://github.com/e0ipso/self-review",
  "bugs": {
    "url": "https://github.com/e0ipso/self-review/issues"
  },
  "devDependencies": {
    "@cucumber/cucumber": "^12.6.0",
    "@electron-forge/cli": "^7.11.1",
    "@electron-forge/maker-deb": "^7.11.1",
    "@electron-forge/maker-rpm": "^7.11.1",
    "@electron-forge/maker-squirrel": "^7.11.1",
    "@electron-forge/maker-zip": "^7.11.1",
    "@electron-forge/plugin-auto-unpack-natives": "^7.11.1",
    "@electron-forge/plugin-fuses": "^7.11.1",
    "@electron-forge/plugin-webpack": "^7.11.1",
    "@electron/fuses": "^1.8.0",
    "@eslint/js": "^9.39.2",
    "@playwright/test": "^1.58.2",
    "@semantic-release/git": "^10.0.1",
    "@testing-library/react": "^16.3.2",
    "@types/prismjs": "^1.26.6",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "@vercel/webpack-asset-relocator-loader": "^1.10.0",
    "@vitest/coverage-v8": "^4.0.18",
    "@vitest/ui": "^4.0.18",
    "copy-webpack-plugin": "^13.0.1",
    "css-loader": "^7.1.3",
    "electron": "^40.4.0",
    "eslint": "^9.39.2",
    "fork-ts-checker-webpack-plugin": "^9.1.0",
    "globals": "^15.15.0",
    "husky": "^9.1.7",
    "jsdom": "^28.0.0",
    "node-loader": "^2.1.0",
    "playwright-bdd": "^8.4.2",
    "postcss-loader": "^8.2.0",
    "style-loader": "^4.0.0",
    "ts-loader": "^9.5.4",
